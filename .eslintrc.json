{
  "env": {
    "es6": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb",
  "plugins": ["import"],
  "rules": {
    "max-len": ["error", { "code": 200 }],
    // don't throw Assignment to function parameter
    //      I don't understand param-reassign -> so I disabled it (bad idea!?)
    "no-param-reassign": 1,
    "no-unused-vars": "warn",
    // don't throw linting error on last empty line missing
    "eol-last": ["warning", "never"],
    "quotes": "off",
    "linebreak-style": 0,
    "indent": 0
  }
}
